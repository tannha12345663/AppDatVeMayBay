<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_quest"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/retangle_border">

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chủ đề phổ biến"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#554036"
            android:layout_marginBottom="15dp"/>

        <View
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/map_quest"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_topic"/>

        <TextView
            android:id="@+id/datchomuave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_below="@+id/tv_topic"
            android:text="Đặt chỗ mua vé"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>

        <View
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/arrow_quest"
            android:layout_below="@+id/tv_topic"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DC280A"
            android:layout_below="@id/datchomuave"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <View
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/airplane_ticket"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/view"/>

        <TextView
            android:id="@+id/datvetructuyen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Đặt vé trực tuyến"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@+id/view"/>

        <View
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/arrow_quest"
            android:layout_below="@+id/view"/>

            </RelativeLayout>

        </LinearLayout>